<div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12">
          <div class="login" id="contentArea">
              <h1 class="display-4">Register</h1>

              <% if(messages.length > 0) { %>
                <div id="messageArea" class="alert alert-danger">
                  <%= messages %>
                </div>
              <% } %>

              <form method="POST" id="registerForm" novalidate>
                <p class="hint-text">Make an account for yourself. It's completely free and takes less than a minute.</p>
                <div class="form-group">
                  <div class="row">
                    <p class="lead"></i> Individual Information</p>
                    <div class="col-md-6">
                      <input class="form-control" type="text" name="FirstName" id="first" placeholder="First Name" required>
                    </div>
                    <div class="col-md-6">
                      <input class="form-control" type="text" name="LastName" id="last" placeholder="Last Name" required>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="email" class="form-control" id="email" name="EmailAddress" required
                      value="" placeholder="Email Address">
                    </div>
                  </div>
                </div>

                <div class="form-group mt-4">
                  <div class="row">
                    <p class="lead"></i>Set Up Information</p>
                    <div class="col-md-12">
                      <input type="text" class="form-control" id="username" name="username"  required
                      value="" placeholder="Username">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="password" class="form-control" id="password" name="password"  required
                      value="" placeholder="Password">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="password" class="form-control" id="confirmPassword" name="re-enterPassword"  required
                      value="" placeholder="Re-enter Password">
                    </div>
                  </div>
                </div>
                 
                                                    
                <div class="text-end mt-2">
                  <button id="submitButton" type="submit" class="btn btn-primary">Register</button>
                  <button id="cancelButton" type="reset" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Cancel</button>
                </div>
              </form>
             
          </div>
          <p class="text-center text-muted small">
            Already have an account? 
            <a href="/login">Sign in</a>
          </p>
    </div>
</div>